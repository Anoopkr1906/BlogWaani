<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
</head>
<body style="background-image: url('images/coolbackgrounds-fractalize-clear_lagoon.png'); background-size: cover; background-repeat: no-repeat; min-height: 100vh;">
    <%- include('./partials/nav') %>
    <div class="container mt-3 " style="background-image: url('images/coolbackgrounds-fractalize-clear_lagoon.png'); background-size: cover; background-repeat: no-repeat;">
        <div class="row row-cols-3">
            <% blogs.forEach(blog => { %>
                <div class="col">
                    <div class="card col mt-3 mb-3 d-flex flex-column" style="width: 18rem; ">
                        <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="..." height="300rem">
                        <div class="card-body">
                          <h5 class="card-title"><%= blog.title %></h5>
                          <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>